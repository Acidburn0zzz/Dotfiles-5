[user]
    name = Baptiste Fontaine
    email = batifon@yahoo.fr
[color]
	ui = auto
[color "branch"]
    current = bold
[alias]
    a    = add
    br   = branch
    ca   = commit --amend
    chp  = cherry-pick
    ci   = commit
    cl   = clone
    cm   = commit -m
    co   = checkout
    df   = diff
    f    = fetch
    i    = !git init && [ ! -f .gitignore ] && cp ~/.global_ignore .gitignore
    lg   = log --graph --pretty=format:'%Cred%h%Creset - %C(blue bold)%an%Creset: %C(cyan)%s%Creset %Cgreen(%ar)%Creset'
    lgs  = log --pretty=format:'%Cblue%h%Creset: %s' # short
    llg  = log --pretty=format:'%h - %an: %s (%ar)'
    m    = mv
    s    = status -sb
    who  = shortlog -s --
[core]
    pager = cat
    editor = vim
    excludesfile = /home/baptiste/.global_ignore
[branch]
	autosetupmerge = true
[rerere]
	enabled = true
[push]
	default = upstream
[web]
	browser = chromium-browser
[github]
	user = bfontaine
[help]
	autocorrect = 1
