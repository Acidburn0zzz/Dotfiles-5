[user]
	name  = Baptiste Fontaine
	email = batifon@yahoo.fr
[color]
	ui = auto
[color "branch"]
	current = bold
[alias]
	a    = add
	br   = branch
	ca   = commit --amend
	caa  = !git add . && git commit --amend
	chp  = cherry-pick
	c    = commit
	cl   = clone
	cm   = commit -m
	co   = checkout
	df   = diff
	f    = fetch
	fp   = format-patch
	fuck = reset HEAD --hard
	i    = !git init && [ ! -f .gitignore ] && cp ~/.cvsignore .gitignore
	l1   = !git lg -n 1 && echo
	lg   = log --graph --pretty=format:'%Cred%h%Creset - %C(blue bold)%an%Creset: %C(cyan)%s%Creset %Cgreen(%ar)%Creset'
	lgs  = log --pretty=format:'%Cblue%h%Creset: %s'
	llg  = log --pretty=format:'%h - %an: %s (%ar)'
	ls   = ls-tree master
	m    = mv
	more = log --graph --pretty=format:'%Cred%h%Creset - %C(blue bold)%an%Creset: %C(cyan)%s%Creset %Cgreen(%ar)%Creset' @{u}..
	s    = status -sb
	sm   = send-email
	who  = shortlog -s --

	# Copied from https://github.com/jdavis/dotfiles
	# See http://blog.pagebakers.nl/2009/01/29/git-ignoring-changes-in-tracked-files/
	untrack = update-index --assume-unchanged
	track   = update-index --no-assume-unchanged

[core]
	pager = cat
	editor = vim
	excludesfile = ~/.cvsignore
[branch]
	autosetupmerge = true
[rerere]
	enabled = true
[push]
	default = upstream
[web]
	browser = chromium-browser
[github]
	user = bfontaine
[help]
	autocorrect = 1
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[achievement]
	upload = false
[git-up "bundler"]
	check = true
[diff]
	algorithm = patience
