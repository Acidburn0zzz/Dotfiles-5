#! /bin/bash
#
# Experimental Homebrew command to check what was updated in an Homebrew
# formula

__brew_wazup() {
  if [ "x$*" == x ] || [ "$1" == "-h" ]; then
    echo -e "Usage:\n\tbrew wazup <formula>"
    exit 1
  fi

  local dir="${HOMEBREW_PREFIX}/Library/Formula"
  local file="${1}.rb"

  if [ ! -f "$dir/$file" ]; then
    echo "Error: No available formula for $1"
    exit 2
  fi

  pushd ${dir} >/dev/null
  git log --since 1day "$file"
  popd >/dev/null
}

__brew_wazup $*
